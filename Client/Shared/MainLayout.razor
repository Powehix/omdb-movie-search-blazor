@inherits LayoutComponentBase

<HeadContent>
    <RadzenTheme Theme="material" />
</HeadContent>

<!-- Top bar -->
<RadzenHeader Style="padding: 1rem; background: #fff; color: #444; display: flex; align-items: center;">
    <!-- Collapsible menu icon -->
    <RadzenSidebarToggle Style="margin-right: 1rem; color: #444;" />

    <h3 style="margin: 0;">
        <span style="color: #444;">Blazor</span>
        <span style="color: #7017ac; margin-left: 0.5rem; font-weight: bold;">OMDb Movie Search</span>
    </h3>
</RadzenHeader>

<RadzenBody>
    <div class="page flex h-screen">
        <!-- Left nav -->
        <div class="sidebar w-64 p-2">
            <RadzenPanelMenu ExpandMode="Single">
                <RadzenPanelMenuItem Text="Home" Path="/" Icon="home" Match="NavLinkMatch.All" />
                <RadzenPanelMenuItem Text="Recent" Path="/recent" Icon="Search" />
            </RadzenPanelMenu>
        </div>

        <!-- Main content -->
        <div class="flex-1 overflow-auto">
            <div class="content p-4">
                @Body
            </div>
        </div>
    </div>
</RadzenBody>

