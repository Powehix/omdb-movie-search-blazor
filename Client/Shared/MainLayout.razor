@inherits LayoutComponentBase

<HeadContent>
    <RadzenTheme Theme="material" />
</HeadContent>

<RadzenHeader Style="padding: 0 1rem; background: #3f51b5; color: white;">
    <div style="display: flex; align-items: center; width: 100%; padding: 1rem;">
        <!-- Title -->
        <NavLink href="/" style="text-decoration:none; color:inherit;">
            <h2 style="margin: 0;">🎬 OMDb Movie Search</h2>
        </NavLink>

        <!-- Recent -->
        <NavLink href="/recent" style="text-decoration:none; color:inherit; font-size: 1.1rem; margin-left: 3rem;">
            Recent
        </NavLink>
    </div>
</RadzenHeader>

<RadzenBody>
    <div class="rz-p-4">
        @Body
    </div>
</RadzenBody>

<RadzenFooter Style="padding: 1rem; background: #f5f5f5; text-align: center;">
    <span>&copy; @(DateTime.Now.Year) OMDb Movie Search</span>
</RadzenFooter>
